FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y git build-essential && rm -rf /var/lib/apt/lists/*

COPY atlas-sdk /app/atlas-sdk
RUN pip install -e /app/atlas-sdk

COPY atlas-report /app/atlas-report
RUN pip install -e /app/atlas-report

WORKDIR /app/atlas-report
ENV PYTHONPATH="/app/atlas-report:/app/atlas-sdk"

CMD ["python", "-c", "import time; print('atlas-report ready'); time.sleep(864000)"]
