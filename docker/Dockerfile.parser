FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y git build-essential && rm -rf /var/lib/apt/lists/*

COPY atlas-sdk /app/atlas-sdk
RUN pip install -e /app/atlas-sdk

COPY atlas-parser /app/atlas-parser
RUN pip install -e /app/atlas-parser

WORKDIR /app/atlas-parser
ENV PYTHONPATH="/app/atlas-parser:/app/atlas-sdk"

CMD ["python", "-c", "import time; print('atlas-parser ready'); time.sleep(864000)"]
